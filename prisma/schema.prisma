generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  name       String
  password   String
  role       Role     @default(VOLUNTEER)
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  deletedAt  DateTime?
}

enum Role {
  HEAD
  LEAD
  VOLUNTEER
}